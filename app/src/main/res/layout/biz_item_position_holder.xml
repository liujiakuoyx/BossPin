<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/position_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position Name"
            android:textColor="#383838"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/position_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="10K-40K"
            android:textColor="#2aa8a6"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/position_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="Boss直聘"
            android:textColor="#383838"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/position_company_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已上市"
            android:textColor="#383838"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/position_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@drawable/text_tag_back"
            android:padding="3dp"
            android:text="北京 朝阳区 太和宫"
            android:textColor="#383838"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/position_work_years"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:background="@drawable/text_tag_back"
            android:padding="3dp"
            android:text="3-5年"
            android:textColor="#383838"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/position_education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_tag_back"
            android:padding="3dp"
            android:text="本科"
            android:textColor="#383838"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>